@page "/Clientes"
@using Entidades;

<AuthorizeView Roles="Administrador">
    <Authorized Context="AuthenticationState">

        <h2>Lista de Clientes</h2>
        <div class="form-group row">
            <div class="col-sm-10">
                <a href="/Clientes/Nuevo" class="btn btn-primary m-1">Nuevo Cliente</a>
            </div>


        </div>



        @if (lista == null)
        {
            <p>No existen clientes en el sistema</p>
        }
        else
        {
            <table class="table">
                <thead>

                    <tr>
                        <th>Identidad</th>
                        <th>Nombre del Cliente</th>
                        <th>Direccion</th>
                        <th>Email</th>
                        <th>Telefono</th>

                    </tr>

                </thead>


                <tbody>
                    @foreach (Cliente cliente in lista)
                    {
                        <tr>
                            <td>@cliente.Identidad</td>
                            <td>@cliente.NombreCliente</td>
                            <td>@cliente.Direccion</td>
                            <td>@cliente.Email</td>
                            <td>@cliente.Telefono</td>

                        </tr>

                    <th><a class="btn btn-success" href="@($"/Clientes/Editar/{cliente.Identidad}")">Editar</a></th>
                    }

                </tbody>


            </table>
        }



    </Authorized>



</AuthorizeView>
